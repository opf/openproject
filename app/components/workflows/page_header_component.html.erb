  render Primer::OpenProject::PageHeader.new do |header|
    header.with_title { title }
    header.with_breadcrumbs(breadcrumb_items)

    header.with_action_button(tag: :a,
                              mobile_icon: :copy,
                              mobile_label: t(:button_copy),
                              size: :medium,
