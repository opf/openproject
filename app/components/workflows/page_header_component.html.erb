                              mobile_icon: :info,
                              mobile_label: t(:label_workflow_summary),
                              size: :medium,
                              href: workflows_path,
                              aria: { label: I18n.t(:label_workflow_summary) },
                              title: I18n.t(:label_workflow_summary)) do |button|
      button.with_leading_visual_icon(icon: :info)
      t(:label_workflow_summary)
    end
  end
