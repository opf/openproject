<%= render :partial => 'action_menu' %>

<h2><%=  Workflow.model_name.human %></h2>

<% if @workflow_counts.empty? %>
<p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
<div class="autoscroll">
<table class="list">
<thead>
    <tr>
    <th></th>
    <% @workflow_counts.first.last.each do |role, count| %>
    <th>
        <%= content_tag(role.builtin? ? 'em' : 'span', h(role.name)) %>
    </th>

    <% end %>
    </tr>
</thead>
<tbody>
<% @workflow_counts.each do |type, roles| -%>
<tr class="<%= cycle('odd', 'even') %>">
  <td><%= h type %></td>
  <% roles.each do |role, count| -%>
    <td align="center">
      <%= link_to((count > 0 ? count : image_tag('red_x.png')), {:action => 'edit', :role_id => role, :type_id => type}, :title => l(:button_edit)) %>
    </td>
  <% end -%>
</tr>
<% end -%>
</tbody>
</table>
</div>
<% end %>
