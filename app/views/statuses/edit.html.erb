<% html_title t(:label_administration), "#{t(:label_edit)} #{Status.model_name.human} #{h @status.name}" %>

<%=
  render Primer::OpenProject::PageHeader.new do |header|
    header.with_title { @status.name }
    header.with_breadcrumbs([{ href: admin_index_path, text: t("label_administration") },
                             { href: admin_settings_work_package_tracking_path, text: t(:label_work_package_plural) },
                             { href: statuses_path, text: t(:label_status) },
                             @status.name])
  end
%>

<%= labelled_tabular_form_for(@status) do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <%= styled_button_tag t(:button_save), class: '-primary -with-icon icon-checkmark' %>
<% end %>
