<% if defined? block_name_id %>
  <%= content_for block_name_id %>
<% end %>

<h3 class="widget-box--header">
  <span class="widget-box--header-title"><%=l(:label_project_details)%></span>
</h3>

<div class="overview project_details">
  <ul>
  <% if childprojects.any? %>
    <li><%=l(:label_subproject_plural)%>:
      <%= childprojects.collect{|p| link_to(h(p), project_url(p))}.join(", ").html_safe %></li>
  <% end %>
  <% project.visible_custom_field_values.each do |custom_value| %>
    <% if !custom_value.value.blank? %>
      <li><%= h(custom_value.custom_field.name) %>: <%=h show_value(custom_value) %></li>
    <% end %>
  <% end %>
  </ul>
</div>
