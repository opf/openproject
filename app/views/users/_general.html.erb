<section class="form--section">
  <div class="form--field">
    <%= styled_label_tag 'FIXME', I18n.t(:status, scope: [:attributes]) %>
    <div class="form--field-container">
      <span>
        <span class=""><%= full_user_status(@user, true) %></span>
      </span>
    </div>
  </div>
</section>

<%= labelled_tabular_form_for @user,
                              url: { controller: '/users',
                                        action: "update",
                                        tab: nil },
                              html: { method: :put,
                                         autocomplete: 'off' },
                              as: :user do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <% if @user.active? -%>
    <div class="form--field -no-label">
      <div class="form--field-container">
        <label class="form--label-with-check-box">
          <%= styled_check_box_tag 'send_information', 1, true %>
          <%= l(:label_send_information) %>
        </label>
      </div>
    </div>
  <% end -%>
  <div><%= styled_button_tag l(:button_save), class: '-highlight -with-icon icon-checkmark' %></div>
<% end %>
