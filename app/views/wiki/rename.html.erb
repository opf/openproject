<h2><%= l(:button_rename) %>: <%= h(@original_title) %></h2>

<%= error_messages_for 'page' %>

<%= labelled_tabular_form_for @page, :url => { id: @page, action: 'rename' }, :as => :page do |f| %>
  <div class="box">
    <p><%= f.text_field :title, :required => true, :size => 100  %></p>
    <p><%= f.check_box :redirect_existing_links %></p>
  </div>
  <%= submit_tag l(:button_rename), class: 'button -highlight' %>
<% end %>
