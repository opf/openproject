<%#
  needs locals:
  :f => labelled form builder
%>

<%= error_messages_for :auth_source %>

<div class="box">
  <p><%= f.text_field 'name', :required => true %></p>
  <p><%= f.text_field 'host', :required => true %></p>
  <p><%= f.text_field 'port', :required => true, :size => 6 %></p>
  <p><%= f.check_box 'tls', :label => 'LDAPS' %> </p>
  <p><%= f.text_field 'account'  %></p>
  <p><%= f.password_field 'account_password',
            :label => AuthSource.human_attribute_name(:password),
            :placeholder => ((@auth_source.new_record? || @auth_source.account_password.blank?) ? '' : ('â—'*15)) %></p>
  <p><%= f.text_field 'base_dn', :size => 60 %></p>
  <p><%= f.check_box 'onthefly_register', :label => AuthSource.human_attribute_name(:onthefly) %></p>
</div>

<fieldset class="box">
  <legend><%=l(:label_attribute_plural)%></legend>
  <p><%= f.text_field 'attr_login', :label => AuthSource.human_attribute_name(:login), :required => true, :size => 20  %></p>
  <p><%= f.text_field 'attr_firstname', :label => AuthSource.human_attribute_name(:firstname), :size => 20  %></p>
  <p><%= f.text_field 'attr_lastname', :label => AuthSource.human_attribute_name(:lastname), :size => 20  %></p>
  <p><%= f.text_field 'attr_mail', :label => AuthSource.human_attribute_name(:mail), :size => 20  %></p>
</fieldset>
