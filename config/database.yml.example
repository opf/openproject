# MySQL (default setup).

production:
  adapter: mysql2
  database: openproject
  host: localhost
  username: root
  password:
  encoding: utf8

development:
  adapter: mysql2
  database: openproject_development
  host: localhost
  username: root
  password:
  encoding: utf8

