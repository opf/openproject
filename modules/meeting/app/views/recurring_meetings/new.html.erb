<%=
  render(Primer::OpenProject::PageHeader.new) do |header|
    header.with_title { t(:label_recurring_meeting_new) }
    header.with_breadcrumbs([@project.present? ?
                               { href: project_overview_path(@project.id), text: @project.name } :
                               { href: home_path, text: I18n.t(:label_home) },
                             { href: @project.present? ? project_recurring_meetings_path(@project.id) : recurring_meetings_path,
                               text: I18n.t(:label_meeting_plural) },
                             t(:label_recurring_meeting_new)])
  end
%>


<%= primer_form_with(
      model: @recurring_meeting,
      url: { :controller => '/recurring_meetings', :action => 'create', :project_id => @project }) do |f| %>
  <%= render :partial => 'form', locals: { f: f } %>

  <%= render Primer::Beta::Button.new(type: :submit, scheme: :primary, mt: 3) do %>
    <%= t(:button_create) %>
  <% end %>
<% end %>
